{{#> layout}}
  <table role="presentation">
    <tbody>
      <tr>
        <td>
          <table role="presentation" width="100%" class="proposal-space-title">
            <tr>
              <td class="proposal-space-logo"><img alt="{{proposal.space.name}}" src="https://cdn.stamp.fyi/space/{{proposal.space.id}}?s=48" class="proposal-space-avatar" /></td>
              <td><a href="https://snapshot.org/#/{{proposal.space.id}}">{{proposal.space.name}}</a></td>
            </tr>
          </table>
        </td>
      </tr>
      <tr>
        <td class="title-container" >
          <h1 style="font-size: 1.75em"><a class="proposal-title"  href="{{proposal.link}}">{{proposal.title}}</a></h1>
        </td>
      </tr>
      <tr>
        <td class="block">
          <table>
            <tr><td style="padding: 0 1em 0 0;"><b>Submitted by</b></td><td><a href="https://snapshot.orf/#profile/{{proposal.author}}">{{proposal.author}}</a></td></tr>
            <tr><td><b>Voting start</b></td><td>{{formattedStartDate}}</td></tr>
            <tr><td><b>Voting end</b></td><td>{{formattedEndDate}}</td></tr>
          </table>
        </td>
      </tr>
      <tr>
        <td class="proposal-fullbody" style="padding-top: 1.5em">
          {{{proposalHtmlBody}}}
        </td>
      </tr>
      <tr>
        <td>
          <h2 style="margin-bottom: 1em;">Cast your votes</h2>
        </td>
      </tr>
      <tr>
        <td>
          <table class="proposal-choices">
            {{#each proposal.choices}}
              <tr>
                <td class="proposal-choices-item pending-result">
                  <a href="{{proposal.link}}" style="display: block">{{this}}</a>
                </td>
              </tr>
            {{/each}}
          </table>
        </td>
      </tr>
      <tr>
        <td style="padding-top: .5em; padding-bottom: 1em">
          Voting close on {{formattedEndDate}}
        </td>
      </tr>
    </tbody>
  </table>
{{/layout}}
